<p id="notice"><%= notice %></p>

<h3>Gerenciar Modelos</h3>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @modelos.each do |modelo| %>
      <tr>
        <td><%= modelo.nome %></td>
        <td><%= link_to 'mostrar', modelo %></td>
        <td><%= link_to 'alterar', edit_modelo_path(modelo) %></td>
        <td><%= link_to 'apagar', modelo, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'novo modelo', new_modelo_path %>
